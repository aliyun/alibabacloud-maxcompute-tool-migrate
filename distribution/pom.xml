<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>mma</artifactId>
    <groupId>com.aliyun.odps</groupId>
    <version>0.1.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>distribution</artifactId>

  <dependencies>
    <dependency>
      <groupId>com.aliyun.odps</groupId>
      <artifactId>mma-client</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>com.aliyun.odps</groupId>
      <artifactId>mma-server</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <!-- Package binaries-->
          <execution>
            <id>all-bin</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>src/assembly/assembly${assembly.sql}${assembly.test}.xml</descriptor>
              </descriptors>
              <finalName>mma-${project.version}</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-help-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <id>generate-version-file</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>evaluate</goal>
            </goals>
            <configuration>
              <expression>project.version</expression>
              <output>${project.build.directory}/version.txt</output>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>assembly-sql-checker</id>
      <activation>
        <property>
          <name>sql-checker</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>com.aliyun.odps</groupId>
          <artifactId>sql-checker</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>assembly-full</id>
      <activation>
        <property>
          <name>full</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>com.aliyun.odps</groupId>
          <artifactId>sql-checker</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>